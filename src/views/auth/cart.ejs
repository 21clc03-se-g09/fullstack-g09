<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="../../css/header_footer.css">
  <link rel="stylesheet" href="../../css/auth/cart.css">
  
  <title>TITI GROUP 09</title>
</head>
<body>
  <header> 
    <div class="logo">
      <img src="../../img/logo.png">
    </div> 
    <div class="search">
      <input type="text" placeholder="Search for books...">
      <button type="submit">Search</button>
    </div>
    <div class="cart"> 
      <i class="bi bi-cart3"> </i>
      <p style="font-size: 10px;">Cart</p>
    </div>
    <div class="notification">
      <i class="bi bi-bell"> </i>
      <p style="font-size: 10px;">Notifications</p>
    </div>
      
    <div class="account" onclick="toggleLoginOptions()">
      <i class="bi bi-person-circle"></i>
      <p style="font-size: 10px;">Account</p>
      <div class="login-options" id="loginOptions" style="display: none;">
        <button onclick="redirectTo('/login')">Sign In</button>
        <button onclick="redirectTo('/register')">Register / Signup</button>
      </div>
    </div>
    

    <script>
      function toggleLoginOptions() {
          var loginOptions = document.getElementById("loginOptions");
          loginOptions.style.display = (loginOptions.style.display === "none") ? "block" : "none";
      }
      function redirectTo(path) {
          window.location.href = path;
      }
    </script>
  </header>

  <main class="main-content"> 

    <div class="cart-container">
      <% products.forEach(function(product) { %>
        <div class="cart-item">
          <img src="<%= product.IMAGE_URL %>"" alt="Book 1">
          <div class="book-title">
            <%= product.PRODUCT_NAME %>
          </div>

          <div class="book-price">
            <%= product.PRICE %> đ
          </div>
        </div>
        <div class="quantity">
          <label for="quantity">Quantity:</label>
          <input type="number" id="quantity" name="quantity" value="<%= product.NUMBER %>" min="1">
        </div>
        <div class="cart-total">
          <p>Total: <%= product.TOTAL_PRICE %></p>
        </div>
      <% }); %>
      <div class="tolal-cart">
        <p class="total">Total <%=  Intl.NumberFormat().format(totalCart*1000)%>đ</p>
      </div>
      <div>
        
      </div>

      <form action="/home/cart/order" method="get">
        <input type="hidden" name="username" value="<%= user %>">
        <button class="order" type="submit">Đặt hàng</button>
      </form>
    <div>
  </main>


  <footer>
    <div class="footer-container">
      <div class="footer-left">
          <h3>Contact Information</h3>
          <p>Email: web.titi.group09@gamilcom</p>
          <p>Phone: +84 13002 09 </p>
      </div>
      <div class="footer-right">
          <h3>Follow Us</h3>
          <a href="#" target="_blank">Facebook: facebook.com/titi/group09</a>
          <a href="#" target="_blank">Twitter: xxxxxxx</a>
          <a href="#" target="_blank">Instagram: xxxxxx</a>
      </div>
    </div>

  </footer>

</body>
</html>
