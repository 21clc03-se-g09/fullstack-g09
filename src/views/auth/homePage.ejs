<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="../css/header_footer.css">
  <link rel="stylesheet" href="../css/mainPage.css">
  
  <title>TiHi GROUP 09</title>
</head>
<body>
  <header> 
    <div class="logo">
      <img src="img/logo.png">
    </div> 
    <div class="search">
      <form action="/search"  method="get">
      <input name="productName" id="productName" type="text" placeholder="Search for books..." required>
      <button type="submit">Search</button>
      </form>
    </div>
    <div onclick="redirectTo('/home/cart')" class="cart"> 
      <i class="bi bi-cart3"> </i>
      <p style="font-size: 10px;">Cart</p>
    </div>
    <div class="notification">
      <i class="bi bi-bell"> </i>
      <p style="font-size: 10px;">Notification</p>
    </div>
      
    <div class="account" onclick="toggleLoginOptions()">
      <i class="bi bi-person-circle"></i>
      <p style="font-size: 10px;"> <%= user %></p>
      <div class="login-options" id="loginOptions" style="display: none;">
        <button onclick="redirectTo('/home/updateinfor')">Update profile</button>
        <button onclick="redirectTo('/register')">Logout</button>
      </div>
    </div>
    

    <script>
      function toggleLoginOptions() {
          var loginOptions = document.getElementById("loginOptions");
          loginOptions.style.display = (loginOptions.style.display === "none") ? "block" : "none";
      }
      function showCart(){
        var loginOptions = document.getElementById("showCart");
          loginOptions.style.display = (loginOptions.style.display === "none") ? "block" : "none";

      }
      function redirectTo(path) {
          window.location.href = path;
      }
    </script>
  </header>

  <main class="main-content">  
    <div class="product-container">
      <% products.forEach(function(product) { %>
        <div class="book">
          <img src="<%= product.IMAGE_URL %>"" alt="Book">
          <div class="book-title"><%= product.PRODUCT_NAME %></div>
          <div class="book-price"><%= product.PRICE %> Ä‘</div>
          <form action="/addtocart" method="post">
            <input type="hidden" name="productId" value="<%= product.ID %>">
            <input type="hidden" name="username" value="<%= user %>">
            <button class="add-to-cart" type="submit">Add to cart</button>
          </form>
        </div>
        
      <% }); %>
    </div>
  </main>

  <footer>
    <div class="footer-container">
      <div class="footer-left">
          <h3>Contact Information</h3>
          <p>Email: web.titi.group09@gamilcom</p>
          <p>Phone: +84 13002 09 </p>
      </div>
      <div class="footer-right">
          <h3>Follow Us</h3>
          <a href="#" target="_blank">Facebook: facebook.com/titi/group09</a>
          <a href="#" target="_blank">Twitter: xxxxxxx</a>
          <a href="#" target="_blank">Instagram: xxxxxx</a>
      </div>
    </div>

  </footer>

</body>
</html>
