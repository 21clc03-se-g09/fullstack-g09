<body>
  <header> 
    <div class="logo">
      <img src="img/logo.png">
    </div> 
    <div class="search">
      <input type="text" placeholder="Search for books...">
      <button type="submit">Search</button>
    </div>
    <div class="cart"> 
      <i class="bi bi-cart3"> </i>
      <p style="font-size: 10px;">Cart</p>
    </div>
    <div class="notification">
      <i class="bi bi-bell"> </i>
      <p style="font-size: 10px;">Notifications</p>
    </div>
      
    <div class="account" onclick="toggleLoginOptions()">
      <i class="bi bi-person-circle"></i>
      <p style="font-size: 10px;">Account</p>
      <div class="login-options" id="loginOptions" style="display: none;">
        <button onclick="redirectTo('/login')">Sign In</button>
        <button onclick="redirectTo('/register')">Register / Sign Up</button>
      </div>
    </div>
    

    <script>
      function toggleLoginOptions() {
          var loginOptions = document.getElementById("loginOptions");
          loginOptions.style.display = (loginOptions.style.display === "none") ? "block" : "none";
      }
      function redirectTo(path) {
          window.location.href = path;
      }
    </script>
  </header>

  <main class="main-content">  
    
    <div class="product-container">
      <% products.forEach(function(product) { %>
        <div class="book">
          <img src="<%= product.IMAGE_URL %>"" alt="Book 1">
          <div class="book-title"><%= product.PRODUCT_NAME %></div>
          <div class="book-price"><%= product.PRICE %> Ä‘</div>
          <button class="add-to-cart">Add to Cart</button>
        </div>
      <% }); %>

    </div>
      

  
